build: up exec

up:
	docker-compose up -d

down:
	docker-compose down -v

exec:
	docker exec -it eth_fetcher bash

run:
	go run main.go

request:
	curl -X GET http://127.0.0.1:

request_head:
	curl -X GET http://127.0.0.1: -H 'AUTH_TOKEN:eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VybmFtZSI6ImFsaWNlIn0.AS-ZG8AOlDpDUJiG-JfJu9EctvBUovwBg_zNzeF66MQ'

request_all:
	curl http://localhost:8080/lime/all

auth:
	curl -X POST localhost:8080/lime/authenticate -d '{"username":"alice", "password":"alice"}'
test:
	go test -v -cover
